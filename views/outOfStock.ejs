
  <%- include('layouts/header'); -%>
  <%- include('layouts/navbar'); -%>

  <!-- Main Content -->
    <div class="my-content container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% if(loggedIn) { %> 
            <%- include('layouts/status-dashboard'); -%>
            <h5>Out Of Stock</h5>
            <% for(var i=0; i < outOfStock.length; i++) { %>
                  <a href="/catalog/<%= outOfStock[i]._id %>" class="text-decoration-none" >
                    <div class="product-card"> 
                      <p class="d-flex justify-content-between">Brand: <%= outOfStock[i].brand %>
                        <% if(outOfStock[i].outOfStock) { %>
                          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" color="black" fill="currentColor" class="bi bi-emoji-dizzy" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M9.146 5.146a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zm-5 0a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 1 1 .708.708l-.647.646.647.646a.5.5 0 1 1-.708.708L5.5 7.207l-.646.647a.5.5 0 1 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 0-.708zM10 11a2 2 0 1 1-4 0 2 2 0 0 1 4 0z"/>
                          </svg>
                      <% } %>
                      </p>
                      <p>Quantity: <%= outOfStock[i].quantity %></p>
                      <p>Details: <%= outOfStock[i].details %></p>
                    </div>
                  </a>
              <% } %>
            <% } %>
            
          <% if(!loggedIn) { %>
            <h5>Out Of Stock</h5>
            <% for(var i=0; i < outOfStock.length; i++) { %>
              <div class="product-card">
                <p>Brand: <%= outOfStock[i].brand %></p>
                <p>Details: <%= outOfStock[i].details %></p>
                <p>Quantity: <%= outOfStock[i].quantity %></p>
              </div>
          <% } %>

          <% } %> 
        </div> 
      </div>
    </div>
    
    
    <%- include('layouts/scripts'); -%>

