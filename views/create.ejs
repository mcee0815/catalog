
  
  <%- include('layouts/header'); -%>
  <%- include('layouts/navbar'); -%>
  <div class="container">
    <div class="my-content container mb-4">
      <div class="row">
        <div class="col-md-6 mx-auto product-card">
          <h2 class="text-center pb-2">New Item</h2>
          <hr>
          <% if (locals.myerrors){ %>
          <% myerrors.forEach((err) => { %>
              <div class="bg-danger py-1 px-2 mb-1 rounded"><p class="text-light fs-3"><%= err.msg %></p></div>
          <%  })  %>
          <% } %>
          
      <form action="/catalog/create" method="POST" class="col-md-10 mx-auto" >
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label for="brand">Brand</label>
            <input type="text" class="form-control" placeholder="enter a brand" name="brand">
          </div>
        </div>
  
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label for="quantity">Quantity</label>
            <input type="number" class="form-control" placeholder="enter a quantity" name="quantity">
          </div>
        </div>
        
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label for="details">Details</label>
            <input type="text" class="form-control" placeholder="item details" name="details">
          </div>
        </div>
        
        <button type="submit" class="btn btn-primary mt-2 ml-2">Save</button>
      </form>
        </div>
      </div>
    </div>
  </div>
  
  
  <%- include('layouts/footer'); -%>
  <%- include('layouts/scripts'); -%>
