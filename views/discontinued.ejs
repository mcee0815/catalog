
  <%- include('layouts/header'); -%>
  <%- include('layouts/navbar'); -%>

  <!-- Main Content -->
    <div class="my-content container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <% if(loggedIn) { %> 
            <%- include('layouts/status-dashboard'); -%> 
            <% for(var i=0; i < discontinued.length; i++) { %>
                  <a href="/catalog/<%= discontinued[i]._id %>" class="text-decoration-none" >
                    <div class="product-card"> 
                      <p class="d-flex justify-content-between">Brand: <%= discontinued[i].brand %>
                        <% if(discontinued[i].discontinue) { %>
                        <svg xmlns="http://www.w3.org/2000/svg" color="red" width="22" height="22" fill="currentColor" class="bi bi-exclamation-octagon" viewBox="0 0 16 16">
                          <path fill-rule="evenodd" d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353L4.54.146zM5.1 1L1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1H5.1z"/>
                          <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
                        </svg>
                      <% } %>
                      </p>
                      <p>Quantity: <%= discontinued[i].quantity %></p>
                      <p>Details: <%= discontinued[i].details %></p>
                    </div>
                  </a>
              <% } %>
            <% } %>
            
          <% if(!loggedIn) { %>
            <h3>These items are or will be discontinued</h3>
            <% for(var i=0; i < discontinued.length; i++) { %>
              <div class="product-card">
                <p>Brand: <%= discontinued[i].brand %></p>
                <p>Details: <%= discontinued[i].details %></p>
                <p>Quantity: <%= discontinued[i].quantity %></p>
              </div>
          <% } %>

          <% } %> 
        </div> 
      </div>
    </div>
    
    
    <%- include('layouts/scripts'); -%>

